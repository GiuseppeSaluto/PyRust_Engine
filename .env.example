# ============================================
# AstroForge - Environment Configuration Example
# ============================================

# -------------------------
# MongoDB (optional for Level 1)
# -------------------------
MONGO_INITDB_ROOT_USERNAME=user
MONGO_INITDB_ROOT_PASSWORD=password
MONGO_PORT=27018
MONGO_HOST=mongo
MONGO_DB=pyrust_db

# -------------------------
# Rust Engine
# -------------------------
# URL of the Rust computation microservice
RUST_ENGINE_URL=http://rust-engine:8080

# -------------------------
# NASA API
# -------------------------
# Use a real NASA key or "DEMO_KEY" for limited requests
NASA_API_KEY=DEMO_KEY

# -------------------------
# Logging
# -------------------------
LOG_DIRECTORY=./logs

# -------------------------
# Optional Settings
# -------------------------
REQUEST_TIMEOUT=30
DEBUG=true
